<script>
    var a = 12, b = 5, c = a / b;
    var srt = 'Это новый скрипт';
    alert('New script: ' + srt + ', переменная c = ' + c);
    var d = a * b;
    alert ('d = ' + d);
    alert("Вычисление выражения, значение а = " + a);
    var a = 5 + 8;
    var d2 = a * b;
    alert("Новое значение а = " + a + ", d = " + d + ", d2 = " + d2);
    var date = new Date();      // получаем текущую дату
    var time = date.getHours(); // получаем текущее время в часах
    if(time <= 9)               // сравниваем время с число 9
        alert('Доброе утро! Сейчас ' + time + ' часов');    // если время меньше 9
    if(9 > time < 18)                                       // сравниваем время с число 18
        alert('Добрый день! Сейчас ' + time + ' часов');    // если время меньше 18
    else
        alert('Добрый вечер! Сейчас ' + time + ' часов');   // если время равно 18 и больше
    // подключим файл на веб-страницу:
</script>
    <h4>Теперь подключим файл на веб-страницу</h4>
